<Window x:Class="DeveloperTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Super Duper Developer Timer!!!!!" Height="536" Width="954" Topmost="True" Opacity="1" AllowsTransparency="True" WindowStyle="None" Background="#FFFFFFFF" >

    <Grid>
        <StackPanel x:Name="seconds" HorizontalAlignment="Left" Height="152" Margin="70,210,0,0" VerticalAlignment="Top" Width="468" Orientation="Horizontal">
            <TextBlock FontSize="150" FontFamily="Arial Black" x:Name="Minutes" Text="{Binding DisplayMinutes}"></TextBlock>
            <TextBlock FontSize="150" FontFamily="Arial Black">:</TextBlock>
            <TextBlock FontSize="150" FontFamily="Arial Black" x:Name="Seconds" Text="{Binding DisplaySeconds}"></TextBlock>
        </StackPanel>
        <Button Content="You guys are crazy"  x:Name="btnStart" Margin="179,395,532,0" VerticalAlignment="Top" Width="243" Height="68" />

    </Grid>
</Window>
