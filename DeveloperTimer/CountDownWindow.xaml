<Window x:Class="DeveloperTimer.CountDownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CountDownWindow" Height="300" Width="800">
    <Grid>
        <Label Height="89" Name="lblTime" VerticalAlignment="Top" FontSize="64" Content="{Binding TimeRemaining}">
            <Label.Background>
                <SolidColorBrush />
            </Label.Background>
        </Label>

    </Grid>
</Window>
