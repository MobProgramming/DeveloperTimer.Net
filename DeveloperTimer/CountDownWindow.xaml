<Window x:Class="DeveloperTimer.CountDownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CountDownWindow" Height="300" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Opacity="1"
        Background= "#78FFFFFF" >
    <Grid Opacity="1">
        <Label Height="89" Name="lblTime" VerticalAlignment="Top"
               FontSize="64" Foreground="LightGray" Content="{Binding TimeRemaining}"
               Margin="0,181,0,0"
               Opacity="1">
            <Label.Background>
                <SolidColorBrush  />
            </Label.Background>
        </Label>

    </Grid>
</Window>
